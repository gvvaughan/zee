-- Constants set by configure
PACKAGE = "@PACKAGE@"
PACKAGE_NAME = "@PACKAGE_NAME@"
PACKAGE_BUGREPORT = "@PACKAGE_BUGREPORT@"
VERSION = "@VERSION@"

-- Remove current directory from package.path
package.path = package.path:gsub (";%./%?%.lua", ""):gsub ("^%./%?%.lua;", "")

-- Fudge package.path when running in-tree
local IN_TREE_LUA_PATH = "@in_tree_lua_path@"
if IN_TREE_LUA_PATH ~= "" then
  package.path = IN_TREE_LUA_PATH .. ";" .. package.path
end
require "luarocks.loader"
require (PACKAGE)


local function err (err)
  term_close ()
  print ("Internal error. Please report this bug with steps to reproduce the problem.")
  print (debug.traceback(err, 2))
  os.exit (2)
end

xpcall (main, err)

-- Constants set by configure
PACKAGE = "@PACKAGE@"
PACKAGE_NAME = "@PACKAGE_NAME@"
PACKAGE_BUGREPORT = "@PACKAGE_BUGREPORT@"
VERSION = "@VERSION@"
PKGDATA_PATH = "@pkgdatadir@"
if PKGDATA_PATH:sub (1, 1) ~= "/" then
  PKGDATA_PATH = arg[0]:gsub ("[^/]+$", "") .. PKGDATA_PATH
end

-- Remove current directory from package.path
package.path = package.path:gsub (";%./%?%.lua", ""):gsub ("^%./%?%.lua;", "")

-- Add program code directory to package.path and load program
package.path = PKGDATA_PATH .. "/?.lua;" .. package.path
require "loadprog"


local function err (err)
  term_close ()
  print ("Internal error. Please report this bug with steps to reproduce the problem.")
  print (debug.traceback(err, 2))
  os.exit (2)
end

xpcall (main, err)
